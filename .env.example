# -----------------------------------------------------------------------------
# Database (PostgreSQL)
# -----------------------------------------------------------------------------
POSTGRES_USER=supercv
POSTGRES_PASSWORD=your_secure_password_here
POSTGRES_DB=supercv

# Connection string (for local development without Docker)
DATABASE_URL=postgresql://supercv:your_secure_password_here@localhost:5432/supercv

# -----------------------------------------------------------------------------
# Redis
# -----------------------------------------------------------------------------
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_TLS=false

# -----------------------------------------------------------------------------
# Backend (NestJS)
# -----------------------------------------------------------------------------
NODE_ENV=development
JWT_SECRET=your_jwt_secret_here_min_32_chars_long

# AI Engine internal URL (for Docker networking)
AI_ENGINE_URL=http://ai-engine:8000

# Frontend URL (for CORS configuration)
FRONTEND_URL=http://localhost:3000

# -----------------------------------------------------------------------------
# AI Engine (Python/FastAPI)
# -----------------------------------------------------------------------------
# Get your API key from: https://aistudio.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key_here

# Backend webhook URL (for Docker networking)
BACKEND_WEBHOOK_URL=http://backend:3001/cv/webhook

# -----------------------------------------------------------------------------
# Frontend (Next.js)
# -----------------------------------------------------------------------------
# API URL exposed to browser
NEXT_PUBLIC_API_URL=http://localhost:3001

# App URL for metadata
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Backend URL for server-side API calls (NextAuth, SSR)
BACKEND_URL=http://localhost:3001

# NextAuth configuration
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your_nextauth_secret_here_min_32_chars

# Google OAuth (get from https://console.cloud.google.com/)
GOOGLE_CLIENT_ID=your_google_client_id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your_google_client_secret

# -----------------------------------------------------------------------------
# Production Overrides (uncomment for production)
# -----------------------------------------------------------------------------
# FRONTEND_URL=https://supercv.ai
# BACKEND_URL=https://api.supercv.ai
# NEXT_PUBLIC_API_URL=https://api.supercv.ai
# NEXT_PUBLIC_APP_URL=https://supercv.ai
# NEXTAUTH_URL=https://supercv.ai
